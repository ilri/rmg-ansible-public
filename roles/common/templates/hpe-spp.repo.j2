{{ ansible_managed | comment }}

[spp]
name=Service Pack for ProLiant
{% if ansible_product_name is search('.*Gen11.*') -%}
baseurl=https://downloads.linux.hpe.com/repo/spp-gen11/redhat/$releasever/$basearch/current
{% elif ansible_product_name is search('.*Gen10.*') -%}
baseurl=https://downloads.linux.hpe.com/repo/spp-gen10/redhat/$releasever/$basearch/current
{% elif ansible_product_name is search('.*Gen9.*') -%}
baseurl=https://downloads.linux.hpe.com/repo/spp-gen9/redhat/$releasever/$basearch/current
{% elif ansible_product_name is search('.*Gen8.*') -%}
baseurl=https://downloads.linux.hpe.com/repo/spp-gen8/redhat/$releasever/$basearch/current
{% endif %}
enabled=1
gpgcheck=1
gpgkey=https://downloads.linux.hpe.com/repo/spp/GPG-KEY-spp,https://downloads.linux.hpe.com/repo/spp/GPG-KEY2-spp

{% if ansible_distribution == "Ubuntu" %}
{%   set apt_mirror    = apt_mirror | default("uk.archive.ubuntu.com") %}
#############################################################
################### OFFICIAL UBUNTU REPOS ###################
#############################################################

###### Ubuntu Main Repos
deb http://{{ apt_mirror }}/ubuntu {{ ansible_distribution_release }} main restricted universe multiverse

###### Ubuntu Update Repos
deb http://{{ apt_mirror }}/ubuntu {{ ansible_distribution_release }}-security main restricted universe multiverse
deb http://{{ apt_mirror }}/ubuntu {{ ansible_distribution_release }}-updates main restricted universe multiverse
{% elif ansible_distribution == "Debian" %}
deb http://deb.debian.org/debian {{ ansible_distribution_release }} main contrib non-free non-free-firmware

deb http://security.debian.org/debian-security {{ ansible_distribution_release }}-security main contrib non-free non-free-firmware

# bullseye-updates, to get updates before a point release is made;
# see https://www.debian.org/doc/manuals/debian-reference/ch02.en.html#_updates_and_backports
deb http://deb.debian.org/debian {{ ansible_distribution_release }}-updates main contrib non-free non-free-firmware
{% endif %}

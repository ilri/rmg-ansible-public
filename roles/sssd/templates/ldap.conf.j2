# See ldap.conf(5) for details
# This file should be world readable but not world writable.

#BASE	dc=example,dc=com
#URI	ldap://ldap.example.com ldap://ldap-master.example.com:666

#SIZELIMIT	12
#TIMELIMIT	15
#DEREF		never

# use trusted ca certs bundle - contains hpc's ca cert
# using the ca certs bundle works on both GNUTLS & OpenSSL
TLS_CACERT {{ ca_certs_bundle }}
TLS_REQCERT     demand

URI ldaps://hpc.ilri.cgiar.org
BASE dc=ilri,dc=cgiar,dc=org
